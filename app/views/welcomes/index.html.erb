<h1>Blog</h1>

<ul>
  <% @blogs.each do |blog| %>
    <li>
      <%= link_to blog.title, blog %>
    </li>
    <li>
      <%=  blog.body %>
    </li>
  <% end %>
</ul>



<div class="container">
  <div class="card-columns">
    <% @blogs.each do |blog| %>
    <div class="card" style="overflow: hidden;max-height: 500px">
      
      <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">                
          <% if blog.blogpic.present? %>
            <%=image_tag blog.blogpic , class: "card-img-top" , style: "width:20%" , height:"20%"%>
           
          <%end%>
        </div>
      </div>  

      <div class="p-2" style="overflow: hidden;height: 175px;">
        <h5 class="card-title" ><%= blog.title %></h5>
      </div>
        <p class="ml-3 text-info"><%= blog.created_at.strftime("%Y-%m-%d") %></p>
      <div class="card-footer">
       <%= link_to "Read more.." , blog_path(blog) , class: "float-right" %>
      </div>      
    </div>
    <% end %> 
    </div>   
  </div>
</div>


<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                

                <% @blogs.each do |blog| %>
                  <div class="card" style="overflow: hidden;max-height: 500px">
                    
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">                
                        <% if blog.blogpic.present? %>
                          <%=image_tag blog.blogpic , class: "card-img-top" , style: "width:50%" , height:"50%"%>
                         
                        <%end%>
                      </div>
                    </div>  
              
                    <div class="p-2" style="overflow: hidden;height: 175px;">
                      <h5 class="card-title" ><%= blog.title %></h5>
                    </div>
                      <p class="ml-3 text-info"><%= blog.created_at.strftime("%Y-%m-%d") %></p>
                    <div class="card-footer">
                     <%= link_to "Read more.." , blog_path(blog) , class: "float-right" %>
                    </div>      
                  </div>
                  <% end %> 
                  </div>   
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>